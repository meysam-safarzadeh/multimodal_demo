{
  "family": "mm-training-family",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "<ECS_EXECUTION_ROLE_ARN>",
  "taskRoleArn": "<ECS_TASK_ROLE_ARN>",
  "containerDefinitions": [
    {
      "name": "multimodal",
      "image": "<IMAGE_PLACEHOLDER>",
      "essential": true,
      "environment": [
        {"name":"AWS_REGION","value":"eu-central-1"},
        {"name":"S3_BUCKET","value":"<S3_BUCKET>"},
        {"name":"API_BASE","value":"<API_BASE>"},
        {"name":"CALLBACK_SECRET","value":"<CALLBACK_SECRET>"},
        {"name":"CALLBACK_TTL","value":"900"},
        {"name":"JOB_ID","value":"0"},
        {"name":"MODEL_NAME","value":"multimodal"},
        {"name":"ASSETS_JSON","value":"[]"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ml-trainer",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
